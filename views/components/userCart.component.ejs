<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

</head>

<body>
  <section class="pt-5 pb-5">
    <div class="container">
      <div class="row w-100">
        <div class="col-lg-12 col-md-12 col-12">
          <h3 class="display-5 mb-2 text-center font-weight-bold">Shopping Cart</h3>
          <p class="mb-5 text-center fs-4">
            <i id="totalProducts" class="text-info font-weight-bold">3</i> items in your cart
          </p>
          <table id="shoppingCart" class="table table-condensed table-responsive">
            <thead>
              <tr>
                <th style="width:50%">Product</th>
                <th style="width:10%">Quantity</th>
                <th style="width:10%">Price</th>
                <th style="width:10%">Avail Qty.</th>
                <th style="width:12%">Total Price</th>
                <th style="width:16%">Status</th>
                <th style="width:16%"></th>
              </tr>
            </thead>
            <tbody id="tbody"></tbody>
          </table>
          <div class="float-right text-right">
            <h4>Subtotal:</h4>
            <h1 id="subTotal"></h1>
          </div>
        </div>
      </div>
      <div class="row mt-4 d-flex align-items-center">
        <div class="col-sm-6 order-md-2 text-right">
          <button onclick="checkOut()" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Checkout</button>
        </div>
        <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
          <a href="/KartEzy">
            <i class="fas fa-arrow-left mr-2"></i> Continue Shopping</a>
        </div>
      </div>
    </div>
  </section>
  <script src="/js/userCart/userCart.js"></script>
</body>

</html>