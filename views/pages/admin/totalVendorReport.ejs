<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer report</title>
  <link href="/bootstrap/bootstrap.css" rel="stylesheet">
  <script src="/sweetalert2/sweetalert2.min.js"></script>
	<link href="/sweetalert2/sweetalert2.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/bootstrapicons/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/admin.css" />
  <style>
    .rcol:hover {
      background-color: var(--main-bg-color);
    }
    .c1{
      color: inherit;
      opacity: 53%;
    }
    
  </style>
</head>

<body onload="showGridResult('/kartezy/admin/getTotalVendors')">
  <div class="d-flex" id="wrapper">
    <%- include('../../components/adminsidebar.component.ejs'); %>
      <div id="page-content-wrapper">
        <%- include('../../components/adminheader.component.ejs'); %>
          <div class="container-fluid px-4">
            <%- include('../../components/adminreport.component.ejs'); %>
            <div class="row my-5">
              <div class="col-4"> <h3 class="fs-2 mb-2 mx-3"> Vendors</h3></div>
              <div class="col-8 d-flex justify-content-end pl-5" ><button type="button" class="btn btn-success me-5" onclick="addVendor()"> &nbsp;&nbsp; Add Vendors &nbsp;&nbsp;  </button>
                <button type="button" class="btn btn-danger me-5" onclick="removeVendor()">Remove Vendors</button>
              </div>
            </div>
              <div class="row my-5">
                <div class="col">
                  <span style="position:absolute; right: 70px; bottom: 70px; border-radius: 50%; padding: 10px 17px;" class="admin-btn" onclick="pdfGenrate('/kartezy/admin/getTotalVendors', 'Vendors Report')"><i class="bi bi-download fs-3"></i></span>
                  <%- include('../../components/grid2ndversion.ejs'); %>
                </div>
              </div>
          </div>
      </div>
  </div>
</div>
</body>
<script src="/js/vendorAdmin/dashboard.js"></script>
<script src="/js/vendorAdmin/script.js"></script>
<script src="/js/pdfGenrate.js"></script>
<script src="/bootstrap/bootstrap.bundle.min.js"></script>

<script>
  document.getElementById("modulename").innerHTML='Report'
  function addVendor(){
    window.location.href='/kartezy/vendor/insert'
  }
  function removeVendor(){
    window.location.href='/kartezy/admin/displayVendorslist'
  }
</script>
</html>