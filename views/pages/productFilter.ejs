<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="/bootstrap/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="/bootstrapicons/bootstrap-icons.min.css">

  <link rel="icon" type="image/x-icon" href="/images/backgrounds/logo-transparent-red.png">
  <!-- custome css   -->
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/filterpage.css">
  
  <script src="/sweetalert2/sweetalert2.min.js"></script>
  <link href="/sweetalert2/sweetalert2.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="dist/sweetalert.css">

  <title>Home Page</title>
</head>

<body>

  <%- include('../components/header.componant.ejs'); %>

    <!-- sidebar + content -->
    <section class="mt-5">
      <div class="container">
        <div class="row">
          <!-- sidebar -->
          <div class="col-lg-3 filter-sidebar overflow-auto">
            <!-- Toggle button -->
            <button class="btn btn-outline-secondary mb-3 w-100 d-lg-none" type="button" data-mdb-toggle="collapse"
              data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
              aria-label="Toggle navigation">
              <span>Show filter</span>
            </button>
            <!-- Collapsible wrapper -->
            <form action="" id="filterForm">

              <div class="collapse d-lg-block mb-5 " id="navbarSupportedContent">

                <button type="button" class="btn w-100 red-btn mb-4 mt-3 text-uppercase" id="applyBtn">Apply Filter <i
                    class="bi bi-funnel-fill color-red"></i></button>

                <div class="accordion" id="accordionPanelsStayOpenExample">

                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                      <button class="accordion-button bg-light" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                        aria-controls="panelsStdadfyOpen-collapseOne">
                        Categories
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                      <div class="accordion-body">
                        <div id="categoriesContainer">
                          <!-- Checked checkboxs -->
                          <!-- fetch from database  -->
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                      <button class="accordion-button bg-light collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseTwo">
                        Price
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                      <div class="accordion-body">
                        <div class="range">
                          <!-- <input type="range" class="form-range" id="customRange1"> -->
                        </div>
                        <div class="row mb-3">
                          <div class="col-6">
                            <p class="mb-0">
                              Min
                            </p>
                            <div class="form-outline">
                              <input type="number" min="0" id="typeNumber" class="form-control" name="priceMin">
                            </div>
                          </div>
                          <div class="col-6">
                            <p class="mb-0">
                              Max
                            </p>
                            <div class="form-outline">
                              <input type="number" min="0" id="typeNumber" class="form-control" name="priceMax">
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                      <button class="accordion-button bg-light collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseThree">
                        Ratings
                      </button>
                    </h2>
                    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                      <div class="accordion-body">
                        <!-- Default checkbox -->
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="star[]" value="5">
                          <label class="form-check-label" for="flexCheckDefault">
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star-fill color-red"></i> 
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star-fill color-red"></i> 
                            <i class="bi bi-star-fill color-red"></i>
                          </label>
                        </div>
                        <!-- Default checkbox -->
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="star[]" value="4">
                          <label class="form-check-label" for="flexCheckDefault">
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star-fill color-red"></i> 
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star-fill color-red"></i>
                            <i class="bi bi-star color-red"></i>
                          </label>
                        </div>
                        <!-- Default checkbox -->
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="star[]" value="3">
                          <label class="form-check-label" for="flexCheckDefault">
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star-fill color-red"></i> 
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star color-red"></i>
                            <i class="bi bi-star color-red"></i>
                          </label>
                        </div>
                        <!-- Default checkbox -->
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="star[]" value="2">
                          <label class="form-check-label" for="flexCheckDefault">
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star-fill color-red"></i>
                            <i class="bi bi-star color-red"></i> <i class="bi bi-star color-red"></i>
                            <i class="bi bi-star color-red"></i>
                          </label>
                        </div>

                        <!-- Default checkbox -->
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="star[]" value="1">
                          <label class="form-check-label" for="flexCheckDefault">
                            <i class="bi bi-star-fill color-red"></i> <i class="bi bi-star color-red"></i>
                            <i class="bi bi-star color-red"></i> <i class="bi bi-star color-red"></i>
                            <i class="bi bi-star color-red"></i>
                          </label>
                        </div>

                        <!-- Default checkbox -->
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="star[]" value="0">
                          <label class="form-check-label" for="flexCheckDefault">
                            <i class="bi bi-star color-red"></i> <i class="bi bi-star color-red"></i>
                            <i class="bi bi-star color-red"></i> <i class="bi bi-star color-red"></i>
                            <i class="bi bi-star color-red"></i>
                          </label>
                        </div>

                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </form>
          </div>
          
          <!-- content -->
          <div class="col-lg-9">
            <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3">
              <strong class="d-block py-2 numberOfRecords"></strong>
            </header>
            
            <div id="filterResultContainer">

              <!-- products cards fetch from database -->

            </div>

          </div>
        </div>
      </div>
    </section>

    <script src="/js/homeApi/filter.js"></script>
    <script src="/bootstrap/bootstrap.bundle.min.js"></script>

    <%- include('../components/footer.componant.ejs'); %>

</body>

</html>